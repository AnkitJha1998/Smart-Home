<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RefrigeratorActivity"
    android:orientation="vertical"
    >

    <Switch
        android:id="@+id/onOrOffRefrigerator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:padding="5sp"
        android:text="Refrigerator On/Off" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:padding="5sp"
        android:text="Smart Properties"
        android:textSize="24sp"
        android:textStyle="bold" />


    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="2"
        app:rowCount="3">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eggs"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/eggRaw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NA"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Milk Container"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <TextView
            android:id="@+id/milkRaw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NA"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vegetables"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <TextView
            android:id="@+id/vegRaw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NA"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="2" />
    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/rawToggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:onClick="toggleValues"
        android:text="Raw Values" />
</LinearLayout>